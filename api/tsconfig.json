{
  "extends": "ts-node/node16/tsconfig.json",

  "ts-node": {
    "swc": true,
    "require": ["tsconfig-paths/register"]
  },

  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "lib": ["ES2022"],
    "strict": true,
    "rootDir": ".",
    "types": ["reflect-metadata", "./node_modules/.prisma/client"],
    "outDir": "dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@/*": ["src/*"]
    },
    "baseUrl": "."
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
